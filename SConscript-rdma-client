Import('env')

rdmaEnv = env.Clone()

rdmaEnv.Append(
  CPPDEFINES=['GLATTER_MESA_GLX_GL'],
  CPPPATH=['rdma-client', '/usr/include/SDL2']
)

rdmaEnv.Program(
  target = '../bin/rdma-client', # relative to build/rdma-client
  source = Glob('rdma-client/*.cpp') + Glob('rdma-client/*.cu') + Glob('common/*.cpp') + Glob('rdma/*.cpp') + Glob('rhi/*.cpp') + Glob('rhi/gl/*.cpp') + Glob('imgui/*.cpp'),
  LIBS=['z', 'stdc++', 'boost_chrono', 'boost_system', 'GL', 'dl', 'pthread', 'opencv_core', 'opencv_imgproc', 'opencv_calib3d', 'opencv_aruco', 'cuda', 'cudart', 'ibverbs', 'rdmacm', 'SDL2']
)

